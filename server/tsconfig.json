{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",     
    "module": "commonjs",                     
    "sourceMap": true,    
    "rootDir": "./src",       
    "outDir": "dist",    

    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,         
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
